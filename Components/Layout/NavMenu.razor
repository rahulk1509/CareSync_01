@inject HospitalTriageAI.Services.IAuthService AuthService
@implements IDisposable

<div class="sidebar-header">
    <div class="sidebar-container">
        <a class="sidebar-brand" href="">
            <svg class="brand-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                <rect width="24" height="24" rx="4" fill="#E5754B"/>
                <path d="M12 6v12M6 12h12" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
            </svg>
            <span>CareSync</span>
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="sidebar-nav">
        @if (!AuthService.IsAuthenticated)
        {
            <!-- Public Navigation (Not Logged In) -->
            <div class="nav-item">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="nav-icon" aria-hidden="true">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
                            <polyline points="9,22 9,12 15,12 15,22"/>
                        </svg>
                    </span>
                    Home
                </NavLink>
            </div>

            <div class="nav-item">
                <NavLink class="nav-link" href="about">
                    <span class="nav-icon" aria-hidden="true">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="16" x2="12" y2="12"/>
                            <line x1="12" y1="8" x2="12.01" y2="8"/>
                        </svg>
                    </span>
                    About System
                </NavLink>
            </div>
        }
        else if (AuthService.IsAdmin)
        {
            <!-- Admin-Specific Navigation -->
            <AdminSidebar />
        }
        else if (AuthService.IsPatient)
        {
            <!-- Patient-Specific Navigation -->
            <PatientSidebar />
        }
        else if (AuthService.IsDoctor)
        {
            <!-- Doctor Navigation (placeholder - can add DoctorSidebar later) -->
            <div class="nav-section">
                <div class="nav-section-title">Doctor Portal</div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="doctor-dashboard" Match="NavLinkMatch.All">
                        <span class="nav-icon" aria-hidden="true">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <rect x="3" y="3" width="7" height="7" rx="1"/>
                                <rect x="14" y="3" width="7" height="7" rx="1"/>
                                <rect x="3" y="14" width="7" height="7" rx="1"/>
                                <rect x="14" y="14" width="7" height="7" rx="1"/>
                            </svg>
                        </span>
                        Dashboard
                    </NavLink>
                </div>
                <div class="nav-item">
                    <NavLink class="nav-link" href="my-patients">
                        <span class="nav-icon" aria-hidden="true">
                            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                                <circle cx="9" cy="7" r="4"/>
                                <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                                <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                            </svg>
                        </span>
                        My Patients
                    </NavLink>
                </div>
            </div>
        }

        @if (AuthService.IsAuthenticated)
        {
            <div class="nav-divider"></div>
            
            <!-- Common Links for All Authenticated Users -->
            <div class="nav-item">
                <NavLink class="nav-link" href="about">
                    <span class="nav-icon" aria-hidden="true">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="16" x2="12" y2="12"/>
                            <line x1="12" y1="8" x2="12.01" y2="8"/>
                        </svg>
                    </span>
                    About System
                </NavLink>
            </div>
        }

        <div class="nav-divider"></div>

        <!-- Authentication Section -->
        @if (AuthService.IsAuthenticated)
        {
            <div class="nav-user-info">
                <div class="user-avatar">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                        <circle cx="12" cy="7" r="4"/>
                    </svg>
                </div>
                <div class="user-details">
                    <span class="user-name">@AuthService.CurrentUser?.FullName</span>
                    <span class="user-role">@GetRoleLabel()</span>
                </div>
            </div>
            <div class="nav-item">
                <button class="nav-link logout-btn" @onclick="Logout">
                    <span class="nav-icon" aria-hidden="true">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                            <polyline points="16,17 21,12 16,7"/>
                            <line x1="21" y1="12" x2="9" y2="12"/>
                        </svg>
                    </span>
                    Sign Out
                </button>
            </div>
        }
        else
        {
            <div class="nav-item">
                <NavLink class="nav-link" href="signup">
                    <span class="nav-icon" aria-hidden="true">
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                            <circle cx="8.5" cy="7" r="4"/>
                            <line x1="20" y1="8" x2="20" y2="14"/>
                            <line x1="23" y1="11" x2="17" y2="11"/>
                        </svg>
                    </span>
                    Sign Up
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += HandleAuthStateChanged;
    }

    private void HandleAuthStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
    }

    private string GetRoleLabel()
    {
        if (AuthService.CurrentUser == null) return "";
        return AuthService.CurrentUser.Role switch
        {
            HospitalTriageAI.Models.UserRole.Admin => "Administrator",
            HospitalTriageAI.Models.UserRole.Doctor => "Doctor",
            HospitalTriageAI.Models.UserRole.Patient => "Patient",
            _ => "User"
        };
    }

    public void Dispose()
    {
        AuthService.OnAuthStateChanged -= HandleAuthStateChanged;
    }
}