@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="app-layout">
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <a href="/" class="navbar-brand">
                <div class="brand-icon">
                    <svg width="28" height="28" viewBox="0 0 24 24" fill="none">
                        <rect width="24" height="24" rx="4" fill="#E5754B"/>
                        <path d="M12 6v12M6 12h12" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                    </svg>
                </div>
                <div class="brand-text">
                    <span class="brand-name">CareSync</span>
                    <span class="brand-tagline">AI Triage Platform</span>
                </div>
            </a>
            
            <div class="navbar-links">
            </div>
            
            <div class="navbar-actions">
                <HospitalTriageAI.Components.Shared.ProfileDropdown />
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        <div class="content-container">
            @Body
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <p>&copy; 2026 CareSync. AI-Powered Healthcare Triage.</p>
        </div>
    </footer>
</div>

<style>
    .app-layout {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    /* Navbar */
    .navbar {
        background: var(--white);
        border-bottom: 2px solid var(--gray-200);
        position: sticky;
        top: 0;
        z-index: 100;
        padding-top: env(safe-area-inset-top, 0);
    }

    .navbar-container {
        width: 100%;
        padding: 16px 24px;
        display: flex;
        align-items: center;
    }

    .navbar-brand {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        text-decoration: none;
        margin-right: var(--space-8);
    }

    .brand-icon {
        width: 40px;
        height: 40px;
        background: var(--primary);
        color: var(--white);
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .brand-text {
        display: flex;
        flex-direction: column;
    }

    .brand-name {
        font-weight: 700;
        font-size: 1.125rem;
        color: var(--gray-900);
    }

    .brand-tagline {
        font-size: 0.75rem;
        color: var(--gray-500);
    }

    .navbar-links {
        display: flex;
        flex: 1;
        justify-content: center;
        gap: 3rem;
    }

    .nav-link {
        padding: var(--space-2) var(--space-4);
        color: var(--gray-600);
        font-weight: 500;
        border-radius: var(--radius-md);
        transition: all 0.2s;
    }

    .nav-link:hover {
        color: var(--gray-900);
        background: var(--gray-100);
    }

    .nav-link.active {
        color: var(--primary-dark);
        background: var(--primary-bg);
    }

    .navbar-actions {
        margin-left: auto;
    }

    /* Main Content */
    .main-content {
        flex: 1;
        padding: var(--space-8) var(--space-6);
    }

    .content-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Footer */
    .footer {
        background: var(--white);
        border-top: 2px solid var(--gray-200);
        padding: var(--space-6);
    }

    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }

    .footer p {
        color: var(--gray-500);
        font-size: 0.875rem;
        margin: 0;
    }

    @@media (max-width: 768px) {
        .navbar-container {
            flex-wrap: wrap;
            gap: var(--space-4);
        }

        .navbar-links {
            order: 3;
            width: 100%;
            justify-content: center;
        }

        .btn-accent {
            display: none;
        }
    }
</style>