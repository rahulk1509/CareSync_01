@using HospitalTriageAI.Models.Enums

<span class="risk-badge @GetLevelClass()">
    @GetLevelText()
</span>

@code {
    [Parameter]
    public TriageLevel Level { get; set; }
    
    [Parameter]
    public bool Compact { get; set; } = false;

    private string GetLevelClass() => (int)Level switch
    {
        1 => "emergency",
        2 => "urgent",
        3 => "standard",
        4 => "non-urgent",
        _ => "unassessed"
    };

    private string GetLevelText()
    {
        if (Compact)
        {
            return (int)Level switch
            {
                1 => "E",
                2 => "U",
                3 => "S",
                4 => "N",
                _ => "?"
            };
        }
        
        return (int)Level switch
        {
            1 => "Emergency",
            2 => "Urgent",
            3 => "Standard",
            4 => "Non-Urgent",
            0 => "Unassessed",
            _ => $"Level {(int)Level}"
        };
    }
}

<style>
    .risk-badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-weight: 600;
        font-size: 0.75rem;
        text-transform: uppercase;
    }

    .risk-badge.emergency {
        background-color: #fef2f2;
        color: #dc2626;
        border: 1px solid #fecaca;
    }

    .risk-badge.urgent {
        background-color: #fff7ed;
        color: #ea580c;
        border: 1px solid #fed7aa;
    }

    .risk-badge.standard {
        background-color: #fefce8;
        color: #ca8a04;
        border: 1px solid #fef08a;
    }

    .risk-badge.non-urgent {
        background-color: #f0fdf4;
        color: #16a34a;
        border: 1px solid #bbf7d0;
    }

    .risk-badge.unassessed {
        background-color: #f1f5f9;
        color: #64748b;
        border: 1px solid #e2e8f0;
    }
</style>
