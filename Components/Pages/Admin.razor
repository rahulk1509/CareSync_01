@page "/admin"
@inject NavigationManager Navigation
@inject HospitalTriageAI.Services.IAuthService AuthService
@inject HospitalTriageAI.Services.IModelTrainingService ModelTrainingService

@if (_loading)
{
    <div class="auth-page">
        <div class="auth-loading">
            <div class="spinner-lg"></div>
            <p>Loading...</p>
        </div>
    </div>
}
else if (!AuthService.IsAdmin)
{
    <!-- Admin Login Form -->
    <div class="auth-page">
        <div class="auth-container">
            <div class="auth-header">
                <div class="auth-brand-icon">
                    <svg width="56" height="56" viewBox="0 0 24 24" fill="none">
                        <rect width="24" height="24" rx="6" fill="#4EBDB8"/>
                        <path d="M12 6v12M6 12h12" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                    </svg>
                </div>
                <h1>Admin Portal</h1>
                <p class="auth-subtitle">Sign in to access administrative tools and management</p>
            </div>

            <div class="auth-card">
                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <input type="email" 
                           @bind="_email" 
                           class="auth-input" 
                           placeholder="Enter your email" />
                </div>
                
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input type="password" 
                           @bind="_password" 
                           class="auth-input" 
                           placeholder="Enter your password" />
                </div>

                @if (!string.IsNullOrEmpty(_error))
                {
                    <div class="auth-alert">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <span>@_error</span>
                    </div>
                }

                <button class="auth-btn" @onclick="HandleLogin" disabled="@_submitting">
                    @if (_submitting)
                    {
                        <span class="auth-spinner"></span>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </button>
            </div>

            <div class="auth-demo">
                <p><strong>Demo:</strong> admin@triageai.com / admin123</p>
            </div>
        </div>
    </div>
}
else
{
    <!-- Admin Portal Content -->
    <div class="portal-page">
        <div class="portal-header">
            <div class="portal-header-row">
                <div>
                    <h1>Admin Portal</h1>
                    <p class="portal-subtitle">Welcome back, @AuthService.CurrentUser?.FullName</p>
                </div>
                <button class="btn btn-outline" @onclick="HandleLogout">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                        <polyline points="16 17 21 12 16 7"/>
                        <line x1="21" y1="12" x2="9" y2="12"/>
                    </svg>
                    Logout
                </button>
            </div>
        </div>

        <div class="portal-grid">
            <div class="portal-card" @onclick="@(() => Navigation.NavigateTo("/admin-dashboard"))">
                <div class="portal-card-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="3" width="7" height="7" rx="1"/>
                        <rect x="14" y="3" width="7" height="7" rx="1"/>
                        <rect x="3" y="14" width="7" height="7" rx="1"/>
                        <rect x="14" y="14" width="7" height="7" rx="1"/>
                    </svg>
                </div>
                <h3>Admin Dashboard</h3>
                <p>Full dashboard with patient queue, stats, and doctor assignments</p>
                <span class="portal-badge portal-badge-active">Active</span>
            </div>

            <div class="portal-card" @onclick="@(() => Navigation.NavigateTo("/doctors"))">
                <div class="portal-card-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                        <circle cx="9" cy="7" r="4"/>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"/>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
                    </svg>
                </div>
                <h3>Doctor Management</h3>
                <p>View and manage doctor schedules and availability status</p>
                <span class="portal-badge portal-badge-active">Active</span>
            </div>

            <div class="portal-card" @onclick="@(() => Navigation.NavigateTo("/reports"))">
                <div class="portal-card-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                        <polyline points="14,2 14,8 20,8"/>
                        <line x1="16" y1="13" x2="8" y2="13"/>
                        <line x1="16" y1="17" x2="8" y2="17"/>
                    </svg>
                </div>
                <h3>AI PDF Reports</h3>
                <p>Generate and view AI-powered patient assessment reports</p>
                <span class="portal-badge portal-badge-active">Active</span>
            </div>

            <div class="portal-card" @onclick="@(() => Navigation.NavigateTo("/ai-model"))">
                <div class="portal-card-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                        <path d="M2 17l10 5 10-5"/>
                        <path d="M2 12l10 5 10-5"/>
                    </svg>
                </div>
                <h3>AI Model Management</h3>
                <p>Train, manage and monitor the AI triage prediction model</p>
                @if (ModelTrainingService.HasTrainedModel)
                {
                    <span class="portal-badge portal-badge-active">Model Ready</span>
                }
                else
                {
                    <span class="portal-badge portal-badge-warning">No Model</span>
                }
            </div>
        </div>
    </div>
}

@code {
    private string _email = "";
    private string _password = "";
    private string? _error;
    private bool _submitting = false;
    private bool _loading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.TryRestoreSessionAsync();
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        _submitting = true;
        _error = null;

        var result = await AuthService.LoginAsync(_email, _password);
        if (result.Success)
        {
            if (!AuthService.IsAdmin)
            {
                await AuthService.LogoutAsync();
                _error = "Access denied. Admin credentials required.";
            }
        }
        else
        {
            _error = result.Message;
        }

        _submitting = false;
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
    }
}

<style>
    /* All shared styles are in wwwroot/css/auth.css */
    /* Only page-specific overrides below */
    
    .portal-card .portal-badge {
        margin-top: var(--space-3);
    }
</style>
