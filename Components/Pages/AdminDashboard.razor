@page "/admin-dashboard"
@using HospitalTriageAI.Models
@using HospitalTriageAI.Models.Enums
@inject HospitalTriageAI.Services.IPatientService PatientService
@inject HospitalTriageAI.Services.IDoctorService DoctorService
@inject HospitalTriageAI.Services.IAssignmentService AssignmentService
@inject HospitalTriageAI.Services.IAuthService AuthService
@inject HospitalTriageAI.Services.IDepartmentAnalysisService DepartmentAnalysisService
@inject NavigationManager Navigation
@implements IDisposable

@if (!AuthService.IsAdmin)
{
    <div class="access-denied">
        <h2>Access Denied</h2>
        <p>You must be logged in as an administrator to access this page.</p>
        <a href="/login" class="btn btn-primary">Login as Admin</a>
    </div>
}
else
{
<div class="dashboard-page">
    <div class="dashboard-header">
        <div>
            <h1>Admin Dashboard</h1>
            <p>Welcome, @AuthService.CurrentUser?.FullName</p>
        </div>
        <div class="header-actions">
            <button class="btn btn-outline" @onclick="RefreshData">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="23,4 23,10 17,10"/>
                    <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"/>
                </svg>
                Refresh
            </button>
            <span class="auto-refresh-badge">Auto-refresh: 5s</span>
        </div>
    </div>

    <!-- Stats Overview -->
    <section class="stats-overview">
        <div class="stat-card">
            <div class="stat-icon patients">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                    <circle cx="9" cy="7" r="4"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-value">@_stats.TotalPatients</span>
                <span class="stat-label">Total Patients</span>
            </div>
        </div>
        <div class="stat-card high-risk">
            <div class="stat-icon danger">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                    <line x1="12" y1="9" x2="12" y2="13"/>
                    <line x1="12" y1="17" x2="12.01" y2="17"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-value">@_stats.HighRiskCount</span>
                <span class="stat-label">High Risk</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon warning">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"/>
                    <line x1="12" y1="8" x2="12" y2="12"/>
                    <line x1="12" y1="16" x2="12.01" y2="16"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-value">@_stats.MediumRiskCount</span>
                <span class="stat-label">Medium Risk</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon success">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                    <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-value">@_stats.LowRiskCount</span>
                <span class="stat-label">Low Risk</span>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon doctors">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/>
                    <circle cx="8.5" cy="7" r="4"/>
                    <line x1="20" y1="8" x2="20" y2="14"/>
                    <line x1="23" y1="11" x2="17" y2="11"/>
                </svg>
            </div>
            <div class="stat-content">
                <span class="stat-value">@_doctorStats.AvailableDoctors</span>
                <span class="stat-label">Doctors Available</span>
            </div>
        </div>
    </section>

    <!-- High Risk Alerts -->
    @if (_highRiskPatients.Any())
    {
        <section class="high-risk-section">
            <div class="section-header danger">
                <div class="alert-icon blink">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                        <line x1="12" y1="9" x2="12" y2="13"/>
                        <line x1="12" y1="17" x2="12.01" y2="17"/>
                    </svg>
                </div>
                <h2>High Risk Alerts (@_highRiskPatients.Count)</h2>
            </div>
            <div class="alert-cards">
                @foreach (var patient in _highRiskPatients.Take(5))
                {
                    <div class="alert-card">
                        <div class="alert-patient">
                            <strong>@patient.FullName</strong>
                            <span class="risk-badge @GetRiskClass(patient.CurrentTriageLevel)">
                                @GetRiskLabel(patient.CurrentTriageLevel)
                            </span>
                        </div>
                        <div class="alert-details">
                            <span>Risk: @(((patient.RiskPercentage ?? 0) * 100).ToString("F0"))%</span>
                            <span>Dept: @(patient.RecommendedDepartment ?? "N/A")</span>
                        </div>
                        <button class="btn btn-sm btn-accent" @onclick="() => OpenAssignModal(patient)">
                            Assign Doctor
                        </button>
                    </div>
                }
            </div>
        </section>
    }

    <!-- Patient Queue -->
    <section class="queue-section">
        <div class="section-header">
            <h2>Patient Queue</h2>
            <span class="badge">@_patientQueue.Count patients</span>
        </div>
        
        @if (_patientQueue.Any())
        {
            <div class="table-container">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Patient Name</th>
                            <th>Risk %</th>
                            <th>Risk Level</th>
                            <th>Department</th>
                            <th>Assigned Doctor</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in _patientQueue)
                        {
                            var assignment = patient.Assignments.FirstOrDefault();
                            <tr class="@(IsHighRisk(patient) ? "high-risk-row" : "")">
                                <td>
                                    <div class="patient-name">
                                        @patient.FullName
                                        @if (IsHighRisk(patient))
                                        {
                                            <span class="blink-dot"></span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <div class="risk-percentage @GetRiskClass(patient.CurrentTriageLevel)">
                                        @(((patient.RiskPercentage ?? 0) * 100).ToString("F0"))%
                                    </div>
                                </td>
                                <td>
                                    <span class="risk-badge @GetRiskClass(patient.CurrentTriageLevel)">
                                        @GetRiskLabel(patient.CurrentTriageLevel)
                                    </span>
                                </td>
                                <td>@(patient.RecommendedDepartment ?? "General")</td>
                                <td>@(assignment?.Doctor?.Name ?? "—")</td>
                                <td>
                                    <span class="status-badge @GetStatusClass(patient.Status)">
                                        @patient.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        @if (patient.Status == PatientStatus.Waiting)
                                        {
                                            <button class="btn btn-sm btn-primary" @onclick="() => OpenAssignModal(patient)">
                                                Assign
                                            </button>
                                        }
                                        <button class="btn btn-sm btn-outline" @onclick="() => ViewPatientReport(patient)">
                                            Report
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <p>No patients in queue.</p>
            </div>
        }
    </section>

    <!-- Doctor Management Quick View -->
    <section class="doctors-section">
        <div class="section-header">
            <h2>Doctor Availability</h2>
            <a href="/doctors" class="btn btn-sm btn-outline">Manage Doctors</a>
        </div>
        <div class="doctors-grid">
            @foreach (var doctor in _doctors)
            {
                <div class="doctor-card @(doctor.IsAvailable ? "" : "unavailable")">
                    <div class="doctor-info">
                        <strong>@doctor.Name</strong>
                        <span class="department">@doctor.Department</span>
                    </div>
                    <div class="doctor-status">
                        <span class="workload">@doctor.CurrentPatientCount / @doctor.MaxPatientCapacity patients</span>
                        <span class="availability @(doctor.IsAvailable ? "available" : "unavailable")">
                            @(doctor.IsAvailable ? "Available" : "Unavailable")
                        </span>
                    </div>
                    <button class="btn btn-sm @(doctor.IsAvailable ? "btn-outline-danger" : "btn-primary")" 
                            @onclick="() => ToggleDoctorAvailability(doctor.Id)">
                        @(doctor.IsAvailable ? "Set Unavailable" : "Set Available")
                    </button>
                </div>
            }
        </div>
    </section>

    <!-- Department Analysis Section -->
    <section class="department-section">
        <div class="section-header">
            <h2>Department Analysis</h2>
            <span class="badge">AI-Powered Routing</span>
        </div>
        
        <!-- Department Distribution -->
        <div class="dept-distribution">
            <h4>Patient Distribution by Department</h4>
            <div class="dept-bars">
                @foreach (var dept in _departmentDistribution.OrderByDescending(d => d.Value))
                {
                    var percentage = _departmentDistribution.Values.Sum() > 0 
                        ? (dept.Value * 100.0 / _departmentDistribution.Values.Sum()) 
                        : 0;
                    <div class="dept-bar-item">
                        <div class="dept-label">
                            <span class="dept-name">@dept.Key</span>
                            <span class="dept-count">@dept.Value patients</span>
                        </div>
                        <div class="dept-bar-container">
                            <div class="dept-bar @GetDeptClass(dept.Key)" style="width: @(percentage)%"></div>
                        </div>
                        <span class="dept-percentage">@percentage.ToString("F0")%</span>
                    </div>
                }
            </div>
        </div>

        <!-- Recent Department Predictions -->
        @if (_recentPredictions.Any())
        {
            <div class="recent-predictions">
                <h4>Recent AI Department Recommendations</h4>
                <div class="predictions-grid">
                    @foreach (var prediction in _recentPredictions.Take(6))
                    {
                        <div class="prediction-card @(prediction.IsEmergencyPriority ? "emergency-priority" : "")">
                            <div class="prediction-header">
                                <span class="patient-name-pred">@prediction.Patient?.FullName</span>
                                <span class="confidence-badge">@prediction.ConfidenceScore% confidence</span>
                            </div>
                            <div class="prediction-dept">
                                <span class="dept-tag @GetDeptClass(prediction.RecommendedDepartment)">
                                    @prediction.RecommendedDepartment
                                </span>
                                @if (prediction.IsEmergencyPriority)
                                {
                                    <span class="priority-indicator">PRIORITY</span>
                                }
                            </div>
                            <p class="prediction-explanation">@TruncateText(prediction.ClinicalExplanation, 120)</p>
                            <div class="prediction-footer">
                                <span class="prediction-time">@prediction.PredictedAt.ToString("MMM dd, HH:mm")</span>
                                <button class="btn btn-sm btn-outline" @onclick="() => ViewPredictionDetails(prediction)">
                                    Details
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </section>
</div>

<!-- Prediction Details Modal -->
@if (_showPredictionModal && _selectedPrediction != null)
{
    <div class="modal-overlay" @onclick="ClosePredictionModal">
        <div class="modal-content prediction-modal" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Department Analysis Details</h3>
                <button class="modal-close" @onclick="ClosePredictionModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="prediction-detail-header">
                    <div>
                        <strong>@_selectedPrediction.Patient?.FullName</strong>
                        <span class="dept-tag @GetDeptClass(_selectedPrediction.RecommendedDepartment)">
                            @_selectedPrediction.RecommendedDepartment
                        </span>
                    </div>
                    <div class="confidence-display">
                        <span class="confidence-value">@_selectedPrediction.ConfidenceScore%</span>
                        <span class="confidence-label">Confidence</span>
                    </div>
                </div>
                
                @if (_selectedPrediction.IsEmergencyPriority)
                {
                    <div class="emergency-alert">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/>
                            <line x1="12" y1="9" x2="12" y2="13"/>
                            <line x1="12" y1="17" x2="12.01" y2="17"/>
                        </svg>
                        <span>Emergency Priority - Immediate attention required</span>
                    </div>
                }
                
                <div class="explanation-section">
                    <h4>Clinical Explanation</h4>
                    <p>@_selectedPrediction.ClinicalExplanation</p>
                </div>
                
                @if (!string.IsNullOrEmpty(_selectedPrediction.KeyFindings))
                {
                    <div class="findings-section">
                        <h4>Key Findings</h4>
                        <ul>
                            @foreach (var finding in _selectedPrediction.KeyFindings.Split(';', StringSplitOptions.RemoveEmptyEntries))
                            {
                                <li>@finding.Trim()</li>
                            }
                        </ul>
                    </div>
                }
                
                <div class="prediction-meta">
                    <span>Analyzed: @_selectedPrediction.PredictedAt.ToString("MMMM dd, yyyy HH:mm")</span>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline" @onclick="ClosePredictionModal">Close</button>
                <button class="btn btn-primary" @onclick="() => NavigateToPatient(_selectedPrediction.PatientId)">
                    View Patient
                </button>
            </div>
        </div>
    </div>
}

<!-- Assign Doctor Modal -->
@if (_showAssignModal && _selectedPatient != null)
{
    <div class="modal-overlay" @onclick="CloseAssignModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Assign Doctor</h3>
                <button class="modal-close" @onclick="CloseAssignModal">&times;</button>
            </div>
            <div class="modal-body">
                <p><strong>Patient:</strong> @_selectedPatient.FullName</p>
                <p><strong>Risk Level:</strong> @GetRiskLabel(_selectedPatient.CurrentTriageLevel)</p>
                <p><strong>Department:</strong> @(_selectedPatient.RecommendedDepartment ?? "General")</p>
                
                <div class="form-group">
                    <label class="form-label">Select Available Doctor</label>
                    <select @bind="_selectedDoctorId" class="form-input">
                        <option value="0">-- Select Doctor --</option>
                        @foreach (var doctor in _availableDoctors)
                        {
                            <option value="@doctor.Id">
                                @doctor.Name - @doctor.Department (@(doctor.MaxPatientCapacity - doctor.CurrentPatientCount) slots)
                            </option>
                        }
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline" @onclick="CloseAssignModal">Cancel</button>
                <button class="btn btn-accent" @onclick="AssignDoctor" disabled="@(_selectedDoctorId == 0)">
                    Assign Doctor
                </button>
            </div>
        </div>
    </div>
}
}

@code {
    private PatientStats _stats = new();
    private DoctorStats _doctorStats = new();
    private List<Patient> _patientQueue = new();
    private List<Patient> _highRiskPatients = new();
    private List<Doctor> _doctors = new();
    private List<Doctor> _availableDoctors = new();
    
    // Department Analysis
    private Dictionary<Department, int> _departmentDistribution = new();
    private List<DepartmentPrediction> _recentPredictions = new();
    private bool _showPredictionModal = false;
    private DepartmentPrediction? _selectedPrediction;
    
    private bool _showAssignModal = false;
    private Patient? _selectedPatient;
    private int _selectedDoctorId = 0;
    
    private System.Threading.Timer? _refreshTimer;

    protected override async Task OnInitializedAsync()
    {
        await RefreshData();
        
        // Auto-refresh every 5 seconds
        _refreshTimer = new System.Threading.Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                await RefreshData();
                StateHasChanged();
            });
        }, null, 5000, 5000);
    }

    private async Task RefreshData()
    {
        try
        {
            _stats = await PatientService.GetStatsAsync();
            _doctorStats = await DoctorService.GetStatsAsync();
            _patientQueue = await PatientService.GetPatientQueueAsync();
            _highRiskPatients = await PatientService.GetHighRiskPatientsAsync();
            _doctors = await DoctorService.GetAllDoctorsAsync();
            _availableDoctors = await DoctorService.GetAvailableDoctorsAsync();
            
            // Load department analysis data
            _departmentDistribution = await DepartmentAnalysisService.GetDepartmentDistributionAsync();
            _recentPredictions = await DepartmentAnalysisService.GetPredictionsAsync(limit: 10);
        }
        catch { }
    }

    private void OpenAssignModal(Patient patient)
    {
        _selectedPatient = patient;
        _selectedDoctorId = 0;
        _showAssignModal = true;
    }

    private void CloseAssignModal()
    {
        _showAssignModal = false;
        _selectedPatient = null;
    }

    private async Task AssignDoctor()
    {
        if (_selectedPatient != null && _selectedDoctorId > 0)
        {
            await AssignmentService.AssignPatientAsync(
                _selectedPatient.Id, 
                _selectedDoctorId, 
                AuthService.CurrentUser?.Email);
            
            CloseAssignModal();
            await RefreshData();
        }
    }

    private async Task ToggleDoctorAvailability(int doctorId)
    {
        await DoctorService.ToggleAvailabilityAsync(doctorId);
        await RefreshData();
    }

    private void ViewPatientReport(Patient patient)
    {
        Navigation.NavigateTo($"/patient-report/{patient.Id}");
    }

    private bool IsHighRisk(Patient patient) => 
        patient.CurrentTriageLevel == TriageLevel.Emergency || 
        patient.CurrentTriageLevel == TriageLevel.Urgent;

    private string GetRiskClass(TriageLevel level) => (int)level switch
    {
        1 => "danger",      // Emergency
        2 => "warning",     // Urgent
        3 => "info",        // Standard
        4 => "success",     // NonUrgent
        _ => "default"      // Unassessed or unknown
    };

    private string GetRiskLabel(TriageLevel level) => (int)level switch
    {
        1 => "Emergency",
        2 => "Urgent",
        3 => "Standard",
        4 => "Low",
        0 => "Unassessed",
        _ => level.ToString()  // Fallback: show whatever value it is
    };

    private string GetStatusClass(PatientStatus status) => status switch
    {
        PatientStatus.Waiting => "waiting",
        PatientStatus.Assigned => "assigned",
        PatientStatus.InProgress => "in-progress",
        PatientStatus.Completed => "completed",
        _ => "default"
    };

    public void Dispose()
    {
        _refreshTimer?.Dispose();
    }

    // Department Analysis helpers
    private void ViewPredictionDetails(DepartmentPrediction prediction)
    {
        _selectedPrediction = prediction;
        _showPredictionModal = true;
    }

    private void ClosePredictionModal()
    {
        _showPredictionModal = false;
        _selectedPrediction = null;
    }

    private void NavigateToPatient(int patientId)
    {
        ClosePredictionModal();
        Navigation.NavigateTo($"/patient-report/{patientId}");
    }

    private string GetDeptClass(Department dept) => dept switch
    {
        Department.Emergency => "dept-emergency",
        Department.Cardiology => "dept-cardiology",
        Department.Pulmonology => "dept-pulmonology",
        Department.Neurology => "dept-neurology",
        Department.Orthopedics => "dept-orthopedics",
        Department.GeneralMedicine => "dept-general",
        _ => "dept-default"
    };

    private string TruncateText(string text, int maxLength)
    {
        if (string.IsNullOrEmpty(text) || text.Length <= maxLength)
            return text;
        return text.Substring(0, maxLength) + "...";
    }
}

<style>
