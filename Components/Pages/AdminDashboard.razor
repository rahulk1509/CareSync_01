        margin-bottom: var(--space-1);
    }

    .dashboard-header p {
        color: var(--gray-500);
        margin: 0;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: var(--space-3);
    }

    .auto-refresh-badge {
