@page "/login"
@inject NavigationManager Navigation
@inject HospitalTriageAI.Services.IAuthService AuthService

<div class="login-page">
    <div class="page-header">
        <h1>Sign In</h1>
        <p>Access your TriageAI account</p>
    </div>

    <EditForm Model="@_model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="card form-card">
            <div class="card-header">Account Login</div>
            <div class="card-body">
                <div class="form-group">
                    <label class="form-label">Email Address *</label>
                    <InputText @bind-Value="_model.Email" class="form-input" placeholder="Enter your email" type="email" />
                    <ValidationMessage For="@(() => _model.Email)" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password *</label>
                    <InputText @bind-Value="_model.Password" class="form-input" placeholder="Enter your password" type="password" />
                    <ValidationMessage For="@(() => _model.Password)" />
                </div>
                
                <div class="demo-credentials">
                    <strong>Demo Admin:</strong> admin@triageai.com / admin123
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(_error))
        {
            <div class="alert alert-danger">@_error</div>
        }

        <div class="form-actions">
            <a href="/signup" class="btn btn-outline">Create Account</a>
            <button type="submit" class="btn btn-accent" disabled="@_submitting">
                @if (_submitting)
                {
                    <span class="spinner"></span>
                    <span>Signing in...</span>
                }
                else
                {
                    <span>Sign In</span>
                }
            </button>
        </div>
    </EditForm>
</div>

@code {
    [SupplyParameterFromQuery]
    public string? ReturnUrl { get; set; }
    
    private LoginModel _model = new();
    private bool _submitting = false;
    private string? _error;

    private async Task HandleSubmit()
    {
        _submitting = true;
        _error = null;

        try
        {
            var result = await AuthService.LoginAsync(_model.Email, _model.Password);
            
            if (result.Success)
            {
                // Check for return URL first
                if (!string.IsNullOrEmpty(ReturnUrl))
                {
                    var decodedUrl = Uri.UnescapeDataString(ReturnUrl);
                    // Validate it's a relative URL for security
                    if (decodedUrl.StartsWith("/"))
                    {
                        Navigation.NavigateTo(decodedUrl);
                        return;
                    }
                }
                
                // Redirect based on role
                var redirectUrl = AuthService.CurrentRole switch
                {
                    UserRole.Admin => "/admin-dashboard",
                    UserRole.Doctor => "/doctor-dashboard",
                    UserRole.Patient => "/patient-portal",
                    _ => "/"
                };
                
                Navigation.NavigateTo(redirectUrl);
            }
            else
            {
                _error = result.Message;
            }
        }
        catch (Exception ex)
        {
            _error = $"Login failed: {ex.Message}";
        }
        finally
        {
            _submitting = false;
        }
    }

    public class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }
}

