@page "/admin-login"
@inject NavigationManager Navigation

<div class="admin-login-page">
    <div class="page-header">
        <h1>Admin Login</h1>
        <p>Secure access for hospital administrators</p>
    </div>

    <EditForm Model="@_model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="card form-card">
            <div class="card-header">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                </svg>
                Administrator Access
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label class="form-label">Admin Email *</label>
                    <InputText @bind-Value="_model.Email" class="form-input" placeholder="admin@hospital.com" type="email" />
                    <ValidationMessage For="@(() => _model.Email)" />
                </div>

                <div class="form-group">
                    <label class="form-label">Password *</label>
                    <InputText @bind-Value="_model.Password" class="form-input" placeholder="Enter admin password" type="password" />
                    <ValidationMessage For="@(() => _model.Password)" />
                </div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(_error))
        {
            <div class="alert alert-danger">@_error</div>
        }

        <div class="form-actions">
            <a href="/" class="btn btn-outline">Back to Home</a>
            <button type="submit" class="btn btn-accent" disabled="@_submitting">
                @if (_submitting)
                {
                    <span class="spinner"></span>
                    <span>Authenticating...</span>
                }
                else
                {
                    <span>Sign In as Admin</span>
                }
            </button>
        </div>
    </EditForm>
</div>

@code {
    private AdminLoginModel _model = new();
    private bool _submitting = false;
    private string? _error;

    private async Task HandleSubmit()
    {
        _submitting = true;
        _error = null;

        try
        {
            // TODO: Implement actual admin authentication with backend service
            await Task.Delay(1000); // Simulate API call
            
            // Redirect to admin portal after successful login
            Navigation.NavigateTo("/admin");
        }
        catch (Exception ex)
        {
            _error = $"Authentication failed: {ex.Message}";
        }
        finally
        {
            _submitting = false;
        }
    }

    public class AdminLoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Email is required")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Invalid email address")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Password is required")]
        public string Password { get; set; } = string.Empty;
    }
}

<style>
    .admin-login-page {
        max-width: 450px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: var(--space-8);
        text-align: center;
    }

    .page-header h1 {
        margin-bottom: var(--space-2);
    }

    .page-header p {
        color: var(--gray-500);
        margin: 0;
    }

    .form-card {
        margin-bottom: var(--space-6);
    }

    .card-header {
        display: flex;
        align-items: center;
        gap: var(--space-2);
    }

    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: var(--space-3);
        padding-top: var(--space-4);
    }

    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #dc2626;
        padding: var(--space-3) var(--space-4);
        border-radius: var(--radius-md);
        margin-bottom: var(--space-4);
    }

    @@media (max-width: 640px) {
        .form-actions {
            flex-direction: column;
        }

        .form-actions .btn {
            width: 100%;
        }
    }
</style>
