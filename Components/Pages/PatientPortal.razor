@page "/patient"
@page "/patient-portal"
@inject NavigationManager Navigation
@inject HospitalTriageAI.Services.IAuthService AuthService

@if (_loading)
{
    <div class="auth-page">
        <div class="auth-loading">
            <div class="spinner-lg"></div>
            <p>Loading...</p>
        </div>
    </div>
}
else if (!AuthService.IsAuthenticated)
{
    <!-- Patient Login Form -->
    <div class="auth-page">
        <div class="auth-container">
            <div class="auth-header">
                <div class="auth-brand-icon">
                    <svg width="56" height="56" viewBox="0 0 24 24" fill="none">
                        <rect width="24" height="24" rx="6" fill="#4EBDB8"/>
                        <path d="M12 6v12M6 12h12" stroke="white" stroke-width="2.5" stroke-linecap="round"/>
                    </svg>
                </div>
                <h1>Patient Portal</h1>
                <p class="auth-subtitle">Sign in to access your health records and triage services</p>
            </div>

            <div class="auth-card">
                <div class="form-group">
                    <label class="form-label">Email Address</label>
                    <input type="email" @bind="_email" class="auth-input" placeholder="Enter your email" />
                </div>
                <div class="form-group">
                    <label class="form-label">Password</label>
                    <input type="password" @bind="_password" class="auth-input" placeholder="Enter your password" />
                </div>

                @if (!string.IsNullOrEmpty(_error))
                {
                    <div class="auth-alert">
                        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <circle cx="12" cy="12" r="10"/>
                            <line x1="12" y1="8" x2="12" y2="12"/>
                            <line x1="12" y1="16" x2="12.01" y2="16"/>
                        </svg>
                        <span>@_error</span>
                    </div>
                }

                <button class="auth-btn" @onclick="HandleLogin" disabled="@_submitting">
                    @if (_submitting)
                    {
                        <span class="auth-spinner"></span>
                        <span>Signing in...</span>
                    }
                    else
                    {
                        <span>Sign In</span>
                    }
                </button>

                <div class="auth-footer">
                    <p>Don't have an account? <a href="/signup">Create Account</a></p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Patient Portal Content -->
    <div class="portal-page">
        <div class="portal-header">
            <div class="portal-header-row">
                <div>
                    <h1>Patient Portal</h1>
                    <p class="portal-subtitle">Welcome back, @AuthService.CurrentUser?.FullName</p>
                </div>
                <button class="btn btn-outline" @onclick="HandleLogout">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                        <polyline points="16 17 21 12 16 7"/>
                        <line x1="21" y1="12" x2="9" y2="12"/>
                    </svg>
                    Logout
                </button>
            </div>
        </div>

        <div class="portal-grid">
            <div class="portal-card" @onclick="@(() => Navigation.NavigateTo("/intake"))">
                <div class="portal-card-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
                        <polyline points="14 2 14 8 20 8"/>
                        <line x1="16" y1="13" x2="8" y2="13"/>
                        <line x1="16" y1="17" x2="8" y2="17"/>
                        <line x1="10" y1="9" x2="8" y2="9"/>
                    </svg>
                </div>
                <h3>New Triage Assessment</h3>
                <p>Start a new symptom assessment and get AI-powered triage recommendations</p>
            </div>

            <div class="portal-card" @onclick="@(() => Navigation.NavigateTo("/triage"))">
                <div class="portal-card-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
                    </svg>
                </div>
                <h3>Triage Results</h3>
                <p>View your assessment results and recommended care level</p>
            </div>

            <div class="portal-card" @onclick="@(() => Navigation.NavigateTo("/about"))">
                <div class="portal-card-icon">
                    <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <circle cx="12" cy="12" r="10"/>
                        <line x1="12" y1="16" x2="12" y2="12"/>
                        <line x1="12" y1="8" x2="12" y2="8"/>
                    </svg>
                </div>
                <h3>About CareSync</h3>
                <p>Learn how our AI triage system works</p>
            </div>
        </div>
    </div>
}

@code {
    private string _email = "";
    private string _password = "";
    private string? _error;
    private bool _submitting = false;
    private bool _loading = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AuthService.TryRestoreSessionAsync();
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task HandleLogin()
    {
        _submitting = true;
        _error = null;

        var result = await AuthService.LoginAsync(_email, _password);
        if (!result.Success)
        {
            _error = result.Message;
        }

        _submitting = false;
    }

    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
    }
}

<style>
    /* All shared styles are in wwwroot/css/auth.css */
    /* No page-specific overrides needed */
</style>
